NAME =  libftprintf.a

FLAGS = -Wall -Wextra -Werror

SRC = ft_printf.c \
        change.c \
        check.c \
        ft_itoa_base.c \
        ft_print.c \
        ft_printf.c \
        long.c

HDR = ft_printf.h

OBJ = $(SRC:.c=.o)

DEL = rm -f

all: $(NAME)

$(NAME) : $(OBJ)
        make -C libft
        ar -cru $(NAME) $(OBJ) libft/*.o
        ranlib $(NAME)
%.o: %.c
        gcc $(FLAGS) -c -o $@ $<
clean:
        make clean -C ./libft
        $(DEL) $(OBJ)
fclean: clean
        make fclean -C ./libft
        $(DEL) $(NAME)
re: all
        make all -C ./libft